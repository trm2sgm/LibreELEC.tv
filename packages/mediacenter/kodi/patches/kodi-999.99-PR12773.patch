+++ b/tools/depends/target/samba-gplv3/autotools41.patch
@@ -10360,18 +10360,18 @@ index 0000000..66dadbd
 +	if test x$PYTHON != x
 +	then
 +		DISTUTILS_CFLAGS=`$PYTHON -c "from distutils import sysconfig; \
-+					      print '-I%s -I%s %s' % ( \
++					      print('-I%s -I%s %s' % ( \
 +							sysconfig.get_python_inc(), \
